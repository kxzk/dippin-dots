# life on the edge
auto-update-channel = tip

font-family = ""
font-family = "Berkeley Mono Retina"
font-family-bold = ""
font-family-bold = "Berkeley Mono SemiBold"
font-family-italic = ""
font-family-italic = "Berkeley Mono Retina Oblique"
font-family-bold-italic = ""
font-family-bold-italic = "Berkeley Mono SemiBold Oblique"

font-size = 15
# title = " "

theme = "Monokai Pro Octagon"

# background-opacity = 0.95
background-blur = false

app-notifications = false

# macos-non-native-fullscreen = true
macos-titlebar-style = tabs
# macos-titlebar-proxy-icon = hidden
macos-window-shadow = true
macos-auto-secure-input = true
# macos-window-buttons = hidden
quick-terminal-position = center
quick-terminal-animation-duration = 0

macos-icon = "custom-style"
macos-icon-frame = "plastic"
macos-icon-ghost-color = "#1a1a1a"
macos-icon-screen-color = "#000000"

window-title-font-family = "Berkeley Mono Retina"
split-divider-color = #282a3a
unfocused-split-fill = #0d0e14
window-theme = ghostty
window-decoration = client
window-new-tab-position = end
window-inherit-working-directory = true
window-padding-x = 5
window-padding-y = 5

cursor-style = underline
cursor-style-blink = true
cursor-color = cell-foreground
cursor-text = cell-background
mouse-hide-while-typing = false

clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

shell-integration = detect
shell-integration-features = no-cursor,sudo,title,ssh-env,ssh-terminfo
confirm-close-surface = false

keybind = ctrl+enter=toggle_maximize

# shift for claude code
keybind = shift+enter=text:\x1b\r

# font size
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1

# copy / paste
keybind = ctrl+a>v=select_all
keybind = ctrl+a>y=copy_to_clipboard
keybind = ctrl+a>t=toggle_quick_terminal

# tmux style keybindings - using sequences (prefix model)

# split panes
keybind = ctrl+a>backslash=new_split:right
keybind = ctrl+a>minus=new_split:down

# pane movement
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>l=goto_split:right
keybind = ctrl+a>;=goto_split:previous

# new window/tab (was tmux 'c')
keybind = ctrl+a>c=new_tab

# resize splits - matching tmux arrow keys
keybind = ctrl+a>left=resize_split:left,40
keybind = ctrl+a>right=resize_split:right,40
keybind = ctrl+a>up=resize_split:up,40
keybind = ctrl+a>down=resize_split:down,40

# equalize splits
keybind = ctrl+a>w=equalize_splits

# close split/tab (tmux 'x' equivalent)
keybind = ctrl+a>x=close_surface

# reload config (tmux 'r')
keybind = ctrl+a>r=reload_config

# toggle zoom (tmux 'z' equivalent)
keybind = ctrl+a>z=toggle_split_zoom

# scrolling
keybind = ctrl+q>j=scroll_page_lines:3
keybind = ctrl+q>k=scroll_page_lines:-3
keybind = ctrl+q>n=scroll_page_fractional:0.5
keybind = ctrl+q>p=scroll_page_fractional:-0.5

# quick tab switching
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7

# tab navigation
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# tab title
# keybind = ctrl+a>,=prompt_surface_title
keybind = ctrl+a>,=prompt_tab_title

# command palette
keybind = ctrl+a>u=toggle_command_palette
